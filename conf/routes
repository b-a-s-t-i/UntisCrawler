# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

# HTML stuff
GET         /                                  @controllers.HomeController.index

GET         /user/register                     @controllers.UserController.register

POST        /user/getId                        @controllers.UserController.getId

POST        /timetable/schoolSearch            @controllers.TimetableController.schoolSearch(query: String)

POST        /timetable/loadTimetableData       @controllers.TimetableController.loadTimetableData(server: String, school: String, user: String, password: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
